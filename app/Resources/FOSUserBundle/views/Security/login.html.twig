{% extends "MeowBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	<section class="connexion" >
		<h1>Connexion</h1>
		<form action="{{ path("fos_user_security_check") }}" method="post">
			<ul>
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				<li>
				    <label for="username"><i data-icon="7"></i></label>
				    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="Pseudo" size="30" />
			    </li>
				<li>
				    <label for="password"><i data-icon="r"></i></label>
				    <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe" size="30" />
			    </li>
				<li>
			    	<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			    </li>
				{% if error %}
				    <p class="connexion-error">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
				{% endif %}
		    </ul>
		</form>
	</section>
{% endblock fos_user_content %}