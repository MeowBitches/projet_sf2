{% extends 'MeowBundle::layout.html.twig' %}

{% block content %}

	
	<section>
     
     {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
   	    <p><span><a href="{{ urlBase }}login">Connectez-vous</a></span> ou <span><a href="{{ urlBase }}register">inscrivez-vous</a></span> pour poster un spoil !</p>
    {% endif %}
     <figure>
     	<div><img src="{{ asset('_assets/imgs/spoils/' ~ spoil.cover) }}" alt="Naruto"></div>
        <figcaption><h2>{{ spoil.title }}</h2><h4 style="padding-left: 10px"> -  {{ spoil.manga.name }}</h4></figcaption>
     </figure>
     <div class="infos-spoiler">
        <ul>
        	<li data-icon="8">{{ spoil.author.username }} - <span>{{ spoil.date|date("d/m/Y") }} </span></li>
        	<li data-icon="x">{{ spoil.nbComments }}</li>
        </ul>
     </div>
     <div class="boutons-avis">
     	<ul>
     		<li class="vote reload spoilAction" data-spoil-id="{{ spoil.id }}">Spoil <span>{{ spoil.nbSpoil }}</span></li>
            <li class="vote reload failAction" data-spoil-id="{{ spoil.id }}">Fail <span>{{ spoil.nbFail }}</span></li>
            <li class="vote reload fakeAction" data-spoil-id="{{ spoil.id }}">Fake <span>{{ spoil.nbFake }}</span></li>
        </ul>    
     </div>	
     <button id="refresh">Me spoiler un manga</button>
    
   </section>

    
	<script type="text/javascript">
		$(function(){
			$('#refresh').click(function(){
				location.reload();
			});
		});
	</script>

{% endblock %}