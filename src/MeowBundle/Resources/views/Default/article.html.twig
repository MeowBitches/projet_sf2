{% extends 'MeowBundle::layout.html.twig' %}

{% block content %}

<section class="articles">

	<h2>{{ spoil.manga.name }}</h2>

	 <figure>
	 	<div class="bloc-image">
	     	<img src="{{ asset('_assets/imgs/spoils/' ~ spoil.cover) }}" alt="Naruto">
	     </div>
        <figcaption><h3>{{ spoil.title }}</h3></figcaption>
     </figure>
     <div class="infos-spoiler">
    	<p data-icon="8">Par <a href="{{ urlBase }}profile/{{ spoil.author.username }}">{{ spoil.author.username }}</a> <span>- le {{ spoil.date|date("d/m/Y") }}</span></p>
     </div>
     <div class="boutons-avis">
     	<ul>
     		<li>Spoil <span>{{ spoil.nbSpoil }}</span></li>
            <li>Fail <span>{{ spoil.nbFail }}</span></li>
            <li>Fake <span>{{ spoil.nbFake }}</span></li>
        </ul>    
     </div>	


	<p data-icon="x" class="nb-commentaire">{{ spoil.nbComments }} commentaires</p>

	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

		<div class="ajout-commentaire">
			<a href="{{ urlBase }}profile/{{ spoil.author.username }}" class="avatar">
				<img src="	{% if spoil.cover is not empty %}
								{{ asset('_assets/imgs/users/profil-default.jpg') }}
							{% else %}
								{{ spoil.cover }}
							{% endif %}" alt="Profil de {{ spoil.author.username }}"/>
			</a>

			<textarea placeholder="Ecrire un commentaire"></textarea>
		
			<input type="submit" value="Envoyer"></input>
		</div>

		<div style="clear: both;"></div>

	{% else %}

		<p>Connectez-vous pour pouvoir poster un commentaire.</p>

		<form class="connexion-comm">
			<ul>
				<li>
				    <label for="username"><i data-icon="7"></i></label>
				    <input type="text" id="username" name="_username" required="required"  placeholder="Pseudo" size="30" />
			    </li>
				<li>
				    <label for="password"><i data-icon="r"></i></label>
				    <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe" size="30" />
			    </li>
				<li>
			    	<input type="submit" id="_submit" name="_submit"/>
			    </li>
				
				<p class="connexion-error">Erreur connexion</p>
				
		    </ul>
		</form>

	{% endif %}

	<div class="commentaires">
		<ul>
			{% for comment_lvl1 in comments if comment_lvl1.parent is null %}
			<li>
				<a href="{{ urlBase }}profile/{{ comment_lvl1.author.username }}" class="avatar">
					<img src="	{#{% if comment_lvl1.author.cover is not empty %}
									{{ asset('_assets/imgs/users/profil-default.jpg') }}
								{% else %}
									{{ comment_lvl1.author.cover }}
								{% endif %}#}{{ asset('_assets/imgs/users/profil-default.jpg') }}" alt="Profil de {{ comment_lvl1.author.username }} "/>
				</a>
				
				<div class="comm-right">
					<div class="infos-comm">
						<a href="{{ urlBase }}profile/{{ comment_lvl1.author.username }}">{{ comment_lvl1.author.username }}</a>
						<p class="date-comm">{{ comment_lvl1.date|date("d/m/Y H:i:s") }}</p>
					</div>

					<p class="text-comm"></p>
				</div>

				<div style="clear: both;"></div>

			</li>
				{% for comment_lvl2 in comments if comment_lvl2.parent is not null and comment_lvl2.parent.id == comment_lvl1.id %}

				{% endfor %}
			{% endfor %}
		</ul>
	</div>


</section>



	{#<table>
		<tr>
			<th>Id</th>
			<th>Id / nom / catégorie manga</th>
			<th>Id / pseudo auteur</th>
			<th>Titre</th>
			<th>Slug</th>
			<th>Url image</th>
			<th>Date et heure</th>
			<th>Nombre de commentaires</th>
			<th>Nombre de spoils</th>
			<th>Nombre de fails</th>
			<th>Nombre de fakes</th>
			<th>Publié</th>
		</tr>
		<tr>
			<td>{{ spoil.id }}</td>
			<td>{{ spoil.manga.id }} / {{ spoil.manga.name }} / {{ spoil.manga.category.name }}</td>
			<td>{{ spoil.author.id }} / {{ spoil.author.username }}</td>
			<td>{{ spoil.title }}</td>
			<td>{{ spoil.slug }}</td>
			<td>
				{% if spoil.cover is not empty %}
					placeholder.jpg
				{% else %}
					{{ spoil.cover }}
